<assembly>
    <id>distribution</id>

    <formats>
        <format>zip</format>
    </formats>

    <includeSiteDirectory>false</includeSiteDirectory>

    <dependencySets>
        <dependencySet>
            <includes>
                <include>com.google.code.maven-play-plugin.org.playframework:play:zip:framework</include>
            </includes>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>

        <dependencySet>
            <outputDirectory>framework</outputDirectory>
            <includes>
                <include>com.google.code.maven-play-plugin.org.playframework:play:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>

        <dependencySet>
            <outputDirectory>framework/lib</outputDirectory>
            <includes>
                <include>*:*:jar</include>
            </includes>
            <excludes>
                <exclude>com.google.code.maven-play-plugin.org.playframework:play:jar</exclude>
                <exclude>com.google.code.maven-play-plugin.org.playframework.modules.docviewer:play-docviewer:jar</exclude>
                <exclude>com.google.code.maven-play-plugin.org.playframework.modules.grizzly:play-grizzly:jar</exclude>
                <exclude>com.sun.grizzly:grizzly-http-webserver:jar</exclude>
                <exclude>com.google.code.maven-play-plugin.org.playframework.modules.testrunner:play-testrunner:jar</exclude>
            </excludes>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>

        <dependencySet>
            <scope>test</scope>
            <outputDirectory>framework/lib-test</outputDirectory>
            <includes>
                <include>org.easytesting:fest-assert:jar</include>
                <include>org.apache.ant:ant:jar</include>
                <include>org.mockito:mockito-all:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>

        <dependencySet>
            <outputDirectory>modules/crud</outputDirectory>
            <includes>
                <include>com.google.code.maven-play-plugin.org.playframework.modules.crud:play-crud:zip:module</include>
            </includes>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>

        <dependencySet>
            <outputDirectory>modules/docviewer</outputDirectory>
            <includes>
                <include>com.google.code.maven-play-plugin.org.playframework.modules.docviewer:play-docviewer:zip:module</include>
            </includes>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>

        <dependencySet>
            <outputDirectory>modules/docviewer/lib</outputDirectory>
            <includes>
                <include>com.google.code.maven-play-plugin.org.playframework.modules.docviewer:play-docviewer:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>

        <dependencySet>
            <outputDirectory>modules/grizzly</outputDirectory>
            <includes>
                <include>com.google.code.maven-play-plugin.org.playframework.modules.grizzly:play-grizzly:zip:module</include>
            </includes>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>

        <dependencySet>
            <outputDirectory>modules/grizzly/lib</outputDirectory>
            <includes>
                <include>com.google.code.maven-play-plugin.org.playframework.modules.grizzly:play-grizzly:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>

        <dependencySet>
            <outputDirectory>modules/secure</outputDirectory>
            <includes>
                <include>com.google.code.maven-play-plugin.org.playframework.modules.secure:play-secure:zip:module</include>
            </includes>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>

        <dependencySet>
            <outputDirectory>modules/testrunner</outputDirectory>
            <includes>
                <include>com.google.code.maven-play-plugin.org.playframework.modules.testrunner:play-testrunner:zip:module</include>
            </includes>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>

        <dependencySet>
            <outputDirectory>modules/testrunner/lib</outputDirectory>
            <includes>
                <include>com.google.code.maven-play-plugin.org.playframework.modules.testrunner:play-testrunner:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>
    </dependencySets>
</assembly>
